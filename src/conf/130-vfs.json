{
  "client": {
    "SettingsManager": {
      "VFS": {
        "scandir": {
          "showHiddenFiles": true,
          "showFileExtensions": true,
          "columns": ["filename", "mime", "size"]
        },
        "mounts":[]
      }
    },
    "VFS": {
      "MaxUploadSize": 2097152,
      "Home": "home:///",

      "Mountpoints": {
        "applications": {
          "transport": "applications",
          "icon": "places/user-bookmarks.png",
          "description": "Applications"
        },

        "desktop": {
          "transport": "osjs",
          "icon": "places/user-desktop.png",
          "description": "Desktop",
          "options": {
            "alias": "home:///.desktop",
            "path": "home:///.desktop"
          }
        },

        "osjs": {
          "transport": "dist",
          "icon": "devices/drive-harddisk.png",
          "description": "OS.js",
          "readOnly": true
        },

        "home": {
          "transport": "osjs",
          "icon": "places/user-home.png",
          "title": "Home",
          "description": "Home",
          "searchable": true
        },

        "shared": {
          "transport": "osjs",
          "description": "Shared",
          "icon": "places/folder-publicshare.png"
        },

        "http": {
          "readOnly": true,
          "transport": "http",
          "title": "HTTP",
          "description": "HTTP",
          "visible": false,
          "special": true,
          "match": "^https?\\:\\/\\/"
        },

        "dropbox": {
          "enabled": false,
          "title": "Dropbox",
          "transport": "dropbox",
          "description": "Dropbox",
          "icon": "places/dropbox.png"
        },

        "google-drive": {
          "enabled": false,
          "title": "GoogleDrive",
          "transport": "googledrive",
          "description": "Google Drive",
          "icon": "places/google-drive.png"
        },

        "localstorage": {
          "enabled": false,
          "title": "LocalStorage",
          "transport": "LocalStorage",
          "description": "Browser Localstorage",
          "icon": "apps/web-browser.png"
        },

        "onedrive": {
          "enabled": false,
          "title": "OneDrive",
          "transport": "OneDrive",
          "description": "OneDrive",
          "icon": "places/onedrive.png"
        }
      }
    }
  }
}
